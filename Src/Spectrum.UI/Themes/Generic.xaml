<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converter="clr-namespace:Spectrum.UI.Converter">
    <!-- converters -->
    <converter:BooleanInverseConverter x:Key="booleanInverseConverter"/>
    <converter:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>
    <converter:EnumToDescriptionConverter x:Key="enumToDescriptionConverter"/>
    <converter:EnumToDescriptionListConverter x:Key="enumToDescriptionListConverter"/>
    <converter:NullToBooleanConverter x:Key="nullToBooleanConverter"/>

    <converter:ChainConverter x:Key="booleanInverseToVisibilityConverter">
        <converter:BooleanInverseConverter/>
        <converter:BooleanToVisibilityConverter/>
    </converter:ChainConverter>
    
    <converter:ChainConverter x:Key="nullToVisibilityConverter">
        <converter:NullToBooleanConverter/>
        <converter:BooleanToVisibilityConverter/>
    </converter:ChainConverter>

    <converter:ChainConverter x:Key="notNullToVisibilityConverter">
        <converter:NullToBooleanConverter/>
        <converter:BooleanInverseConverter/>
        <converter:BooleanToVisibilityConverter/>
    </converter:ChainConverter>
</ResourceDictionary>